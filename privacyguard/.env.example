# Database Configuration
MONGODB_URI=mongodb://localhost:27017/privacyguard
MONGODB_TEST_URI=mongodb://localhost:27017/privacyguard_test

# Server Configuration
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# Security
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d
ENCRYPTION_KEY=your-32-character-encryption-key-12
SESSION_SECRET=your-session-secret-change-this
BCRYPT_ROUNDS=12

# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@privacyguard.io
FROM_NAME=PrivacyGuard

# Cloud Storage (AWS S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=privacyguard-archives
AWS_S3_ENDPOINT=https://s3.amazonaws.com

# Cloud Storage (Google Cloud)
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_PRIVATE_KEY_ID=your-key-id
GOOGLE_CLOUD_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key\n-----END PRIVATE KEY-----"
GOOGLE_CLOUD_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_CLOUD_CLIENT_ID=your-client-id
GOOGLE_CLOUD_STORAGE_BUCKET=privacyguard-storage

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# External API Keys
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

HAVEIBEENPWNED_API_KEY=your-hibp-api-key
SHODAN_API_KEY=your-shodan-api-key
DEHASHED_API_KEY=your-dehashed-api-key
DEHASHED_API_EMAIL=your-dehashed-email

# Social Media API Keys
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Browser Automation
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser
PUPPETEER_ARGS=--no-sandbox,--disable-setuid-sandbox,--disable-dev-shm-usage
SELENIUM_HUB_URL=http://localhost:4444/wd/hub

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,txt,csv,json,xml

# Legal Compliance
GDPR_CONTROLLER_NAME=PrivacyGuard Ltd
GDPR_CONTROLLER_EMAIL=dpo@privacyguard.io
GDPR_CONTROLLER_ADDRESS=123 Privacy Street, Data City, DC 12345
CCPA_BUSINESS_NAME=PrivacyGuard Inc
CCPA_CONTACT_EMAIL=privacy@privacyguard.io

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn
ANALYTICS_API_KEY=your-analytics-key
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Queue Configuration
BULL_REDIS_URL=redis://localhost:6379
QUEUE_CONCURRENCY=5
QUEUE_ATTEMPTS=3
QUEUE_BACKOFF_DELAY=5000

# Platform Specific Configuration
CHROME_USER_DATA_DIR=./browser-profiles
DEFAULT_REQUEST_TIMEOUT=30000
MAX_CONCURRENT_REQUESTS=10
REQUEST_RETRY_COUNT=3

# Development & Testing
SKIP_EMAIL_VERIFICATION=false
ENABLE_API_DOCS=true
ENABLE_DEBUG_ROUTES=false
MOCK_EXTERNAL_APIS=false

# Cache Configuration
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600
MAX_CACHE_SIZE=1000